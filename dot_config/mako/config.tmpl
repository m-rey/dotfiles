# output notification on main display
output={{ .monitor_work }}

#display notification for 10s -> 10000ms
default-timeout=10000

# programs can't set custom timeout for their notification
ignore-timeout=1

# display it on top of everything
layer=overlay



# gruvbox theme
background-color=#665C54
text-color=#FBF1C7
width=315
height=105
padding=15
border-size=5
border-color=#928374
